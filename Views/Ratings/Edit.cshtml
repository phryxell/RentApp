@model RentApp.Models.Rating

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Rating</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RatingId" />
            <div class="form-group">
                <label asp-for="Opinion" class="control-label"></label>
                <textarea class="form-control" asp-for="Opinion" rows="5" id="comment"></textarea>
                <span asp-validation-for="Opinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentItems" class="control-label"></label>
                <select asp-for="RentItemId" class="form-control" asp-items="ViewBag.RentItemId"></select>
                <span asp-validation-for="RentItemId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
