@model RentApp.Models.Rating

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Är du säker på att du vill radera recension?</h3>
<div>
    <h4>Rating</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Opinion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Opinion)
        </dd>
        <dt class = "col-sm-2">
            Utrustning
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentItems.Name)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="RatingId" />
        <input type="submit" value="Radera" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-dark">Tillbaka <i class="fas fa-backward"></i></a>
    </form>
</div>
