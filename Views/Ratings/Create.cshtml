@model RentApp.Models.Rating

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Lämna recension vad du tyckte om vår utrustning!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Opinion" class="control-label"></label>
                <textarea class="form-control" asp-for="Opinion" rows="5" id="comment"></textarea>
                <span asp-validation-for="Opinion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentItems" class="control-label">Utrustning</label>
                <select asp-for="RentItemId" class="form-control" asp-items="ViewBag.RentItemId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Lägg till recension" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <a asp-action="Index" class="btn btn-outline-dark">Tillbaka <i class="fas fa-backward"></i></a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
